<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:padding="0dp"
    tools:context=".Home">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:text="Welcome To Laptop Lens "
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background2"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low-end Product Prediction"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/low_end_chart_last"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/oval_button"
                android:elevation="4dp"
                android:padding="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mid-end Product Prediction"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/mid_end_chart_last"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/oval_button"
                android:elevation="4dp"
                android:padding="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High-end Product Prediction"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/high_end_chart_last"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/oval_button"
                android:elevation="4dp"
                android:padding="24dp" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/menuhomelast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/oval3"
            android:gravity="center"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/image_home"
                android:layout_width="67dp"
                android:layout_height="61dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="home_home"
                android:src="@drawable/home_ijo" />

            <ImageButton
                android:id="@+id/image_predict"
                android:layout_width="53dp"
                android:layout_height="61dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="home_prediction"
                android:src="@drawable/prediction_abu" />

            <ImageButton
                android:id="@+id/image_inventory"
                android:layout_width="56dp"
                android:layout_height="51dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="home_inventory"
                android:src="@drawable/inventory_abu" />

            <ImageButton
                android:id="@+id/image_profile"
                android:layout_width="54dp"
                android:layout_height="61dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="home_profile"
                android:src="@drawable/profile_abu" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
